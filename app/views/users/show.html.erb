<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">


    <% flash.each do |type, message| %>
        <div class="flash-message <%= type %>">
          <%= message %>
        </div>
    <% end %>

<h2>User info</h2>

  <table>
  <tr>
  <%= image_tag @user.get_profile_image(100, 100) %>
  </tr>
  <tr>
  <th>name：</th>
  <th><%= @user.name %></th>
  </tr>
  <tr>
  <th>introduction:</th>
  <th><%= @user.introduction %></th>
  </tr>
  </table>
<%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>


<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <!--<div><%= f.submit 'Create Book' %></div>-->
  <div><input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"></div>
<% end %>
 </div>

<%= render 'books/index', user: @user, book: @book %>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<div>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
   </thead>
   <tbody>

<% @books.each do |book| %>

 
  <tr>
    <th>
    <%= link_to user_path(book.user) do %>
    <%= image_tag book.user.get_profile_image(100, 100) %>
    <% end %>
    </th>
    <th><%= link_to book.title, book_path(book.id) %></th>
    <th><%= book.body %></th>
   </tr>
 </div>
 <% end %>

   </tbody>
 </table>
   </div>
   </div>
 </div>
